    <!--chensheng-->
    <select id="selectOssAttachmentTableList"  resultMap="QmsOssAttachmentAppVOMap">
        SELECT
        t.id,
        t.oss_url,
        t.oss_key,
        t.`status`,
        t.file_size,
        t1.id,
        t1.oss_attachment_id,
        t1.relevance_id,
        t1.type,
        t.original_file_name,
        t1.`status`
        FROM
        qms_oss_attachment AS t LEFT JOIN
        qms_oss_attachment_bind AS t1 ON t1.oss_attachment_id=t.id AND t.`status`='Y' AND t1.`status`='Y'
        <where>
            <if test="type != null and type != ''">
                and t1.type = #{type,jdbcType=VARCHAR}
            </if>
            <if test="relevanceIdList != null and relevanceIdList.size() > 0">
                and t1.relevance_id in
                <foreach collection="relevanceIdList" index="index" item="relevanceId" separator="," open="(" close=")">
                    #{relevanceId,jdbcType=VARCHAR}
                </foreach>
            </if>
        </where>
    </select>
    <select id="selectByRelevanceId" resultType="java.util.Map">
        SELECT
            q.oss_key,
            q.oss_url,
            q.original_file_name,
            q.file_size,
            b.oss_attachment_id,
            b.relevance_id,
            b.type
        FROM
            qms_oss_attachment AS q
            INNER JOIN qms_oss_attachment_bind AS b ON q.id = b.oss_attachment_id
            AND q.`status` = 'Y'
            AND b.`status` = 'Y'
        WHERE
            b.relevance_id = #{relevanceId}
            AND b.type = #{type}
    </select>


