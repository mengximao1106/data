    <!-- 根据组合ID查询记录 Add by laifuying -->
    <select id="getByRelevanceId" parameterType="java.lang.String"
            resultMap="getByRelevanceIdMap">
        SELECT
        b.id bId,a.id aId,a.original_file_name, a.oss_key, a.oss_url, a.file_size
        FROM qms_oss_attachment_bind b
        LEFT JOIN qms_oss_attachment a on b.oss_attachment_id = a.id
        WHERE b.relevance_id = #{id}
    </select>

    <!-- 根据组合ID查询记录 Add by laifuying -->
    <select id="getBaseRecByRelevanceId" parameterType="java.lang.String"
            resultMap="BaseResultMap">
        select
        <include refid="base_column_list"/>
        from qms_oss_attachment_bind
        where relevance_id in
        <foreach collection="list" index="index" item="relevanceId" separator="," open="(" close=")">
            #{relevanceId,jdbcType=VARCHAR}
        </foreach>
    </select>

    <select id="selectSignTable" resultMap="ResultMap">
        SELECT
        t.id,
        t.oss_url,
        t.oss_key,
        t.`status`,
        t.file_size,
        t1.id,
        t1.oss_attachment_id,
        t1.relevance_id,
        t1.type,
        t.original_file_name,
        t1.`status`
        FROM
        qms_oss_attachment AS t LEFT JOIN
        qms_oss_attachment_bind AS t1 ON t1.oss_attachment_id=t.id AND t.`status`='Y' AND t1.`status`='Y' AND t1.type='6' WHERE t1.relevance_id=#{relevanceId,jdbcType=VARCHAR}
    </select>
